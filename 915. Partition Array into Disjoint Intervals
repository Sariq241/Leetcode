#include <vector>
#include <algorithm>
#include <climits>

class Solution {
public:
    int partitionDisjoint(std::vector<int>& nums) {
        
        int max_left = nums[0]; 
        
  
        int max_overall = nums[0];
        
        
        int left_length = 1;

        
        for (int i = 1; i < nums.size(); ++i) {
            
            
            max_overall = std::max(max_overall, nums[i]);
            
            
            if (nums[i] < max_left) {
                
               
                left_length = i + 1;
                
                
                max_left = max_overall;
            }
            
        }

       
        return left_length;
    }
};
