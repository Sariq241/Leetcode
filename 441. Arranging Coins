class Solution {                                    //correct code
public:
    int arrangeCoins(int n) {
     long long int low = 1;   
     long long int high= n;
     long long int result = 0;
     while(low<=high){
        long long int mid = low+(high-low)/2;
        long long int coins = mid *(mid+1)/2;
        if(coins == n){
            return (int)mid;
        }
        else if(coins<n){
            result = mid;
            low = mid+1;

        }
        else{
            high = mid-1;
        }
     }    
      return (int)result;  
    }
};
